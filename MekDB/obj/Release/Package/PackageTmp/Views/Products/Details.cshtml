        </dd>

        
        @*<hr />*@
        <br />
        

        <dt>
            Indsæt antal på lager:
        </dt>
        <dd>
            @using (Html.BeginForm("AddToBasketAntalInd", "Basket"))
            {                
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID)

                @Html.DropDownList("AntalInd", Enumerable.Range(1, 99).Select(i => new SelectListItem{ Text = i.ToString(), Value = i.ToString() }))
                <input type="submit" class="btn btn-primary btn-xs" value=" Indsæt Antal ">
            }
        </dd>

        <br />

        <dt>
            Tag antal fra lager:
        </dt>
        <dd>
            @using (Html.BeginForm("AddToBasketAntalUd", "Basket"))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID)

                @Html.DropDownList("AntalUd", Enumerable.Range(1, Model.LagerStatus).Select(i => new SelectListItem{ Text = i.ToString(), Value = i.ToString() }))
                <input type="submit" class="btn btn-primary btn-xs" value=" Tag Antal ">
            }
        </dd>
    </dl>
</div>
<p>
   @if (Request.IsAuthenticated && User.IsInRole("Admin"))
