        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Bemærkning)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bemærkning)
        </dd>

        
        @*<hr />*@

        

        <dt>
            Indsæt antal på lager:
        </dt>
        <dd>
            @using (Html.BeginForm("AddToBasketAntalInd", "Basket"))
            {                
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID)

                @Html.DropDownList("AntalInd", Enumerable.Range(1, 99).Select(i => new SelectListItem{ Text = i.ToString(), Value = i.ToString() }))
                <input type="submit" class="btn btn-primary btn-xs" value="Indsæt Antal">
            }
        </dd>
        @*<hr />*@
        <dt>
            Tag antal fra lager:
        </dt>
        <dd>
            @using (Html.BeginForm("AddToBasketAntalUd", "Basket"))
            {
                var tal = Model.LagerStatus;
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID)

                @Html.DropDownList("AntalUd", Enumerable.Range(1, tal).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
                <input type="submit" class="btn btn-primary btn-xs" value="Tag Antal">
            }
        </dd>
    </dl>
</div>
<p>
   @if (Request.IsAuthenticated && User.IsInRole("Admin"))
   {
    @Html.ActionLink("Rediger Vare", "Edit", new { id = Model.ID })
    @Html.Raw(" | ")
   }
    @Html.ActionLink("Tilbage", "Index")
</p>
