@{
    ViewBag.Title = "Vare Information";
}

<h2>@ViewBag.Title</h2>
<hr />



<div>

    <dl class="dl-horizontal">

        @*<dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>*@

        <dd>
            <img class="img-responsive" width="400" height="300" src="@Url.Action("getImage", "Products", new { id = Model.ID })" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location.LokationName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location.LokationName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VareNr)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VareNr)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProduktNavn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProduktNavn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DanskNavn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DanskNavn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Suppliers.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Suppliers.Name)
        </dd>

        <dt>
