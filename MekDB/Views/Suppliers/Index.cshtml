@model IEnumerable<MekDB.Models.Suppliers>

@{
    ViewBag.Title = "Leverandør";
}

<h2>@ViewBag.Title</h2>

@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Opret Ny Leverandør", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            <h4>@Html.DisplayNameFor(model => model.Name)</h4>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.ActionLink(item.Name, "Index", "Products", new { supplier = item.Name }, null)*@
            @Html.Label(item.Name)
        </td>
        <td>
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                   @Html.ActionLink("Rediger", "Edit", new { id = item.ID })                
                }
        </td>

    </tr>
}

</table>
